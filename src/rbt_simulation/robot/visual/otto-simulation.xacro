<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="example">

    <!-- Declare PI -->
    <xacro:property name="PI" value="3.14159265359"/>

    <!-- Base Link -->
    <link name="base_link">
        <visual>
            <origin rpy="0.0 0.0 0.0" xyz="0.0 0.0 0.0"/>
            <geometry>
              <mesh filename='package://rbt_simulation/meshes/Body.STL' scale="0.001 0.001 0.001"/>
            </geometry>
        </visual>

        <collision>
            <origin rpy="0.0 0.0 0.0" xyz="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.13 0.15 0.13"/> 
            </geometry>
        </collision>
    </link>

    <!-- Hip Motor Left -->
    <link name="hip_motorL">
        <visual>
            <origin rpy="0.0 0.0 0.0" xyz="0.0 0.0 0.0"/> 
            <geometry>
              <mesh filename='package://rbt_simulation/meshes/CyberGearmotor.STL' scale="0.001 0.001 0.001"/>
            </geometry>
        </visual>
    </link>

    <!-- Knee Motor Left -->
    <link name="knee_motorL">
      <visual>
          <origin rpy="0.0 0.0 0.0" xyz="0.0 0.0 0.0"/> 
          <geometry>
            <mesh filename='package://rbt_simulation/meshes/CyberGearmotor.STL' scale="0.001 0.001 0.001"/>
          </geometry>
      </visual>
    </link>

    <!-- Hip link Left -->
    <link name="hip_linkL">
      <visual>
          <origin rpy="0.0 0.0 0.0" xyz="0.0 0.0 0.0"/> 
          <geometry>
            <mesh filename='package://rbt_simulation/meshes/link1.STL' scale="0.001 0.001 0.001"/>
          </geometry>
      </visual>
    </link> 

    <!-- Knee link Left -->
    <link name="knee_linkL">
      <visual>
          <origin rpy="${PI} ${-PI/2} 0.0" xyz="0.0 0.0 0.0"/> 
          <geometry>
            <mesh filename='package://rbt_simulation/meshes/link2.STL' scale="0.001 0.001 0.001"/>
          </geometry>
      </visual>
    </link> 

    <!-- Leg link Left -->
    <link name="leg_linkL">
      <visual>
          <origin rpy="0.0 0.0 0.0" xyz="0.0 0.0 0.0"/> 
          <geometry>
            <mesh filename='package://rbt_simulation/meshes/link4.STL' scale="0.001 0.001 0.001"/>
          </geometry>
      </visual>
    </link> 

    <!-- wheel link Left -->
    <link name="wheel_linkL">
      <visual>
          <origin rpy="${PI} 0.0 0.0" xyz="0.0 0.0 0.0"/> 
          <geometry>
            <mesh filename='package://rbt_simulation/meshes/ODriveBotwheel.STL' scale="0.001 0.001 0.001"/>
          </geometry>
      </visual>
    </link> 

    <joint name="base_to_hip_motorL" type="continuous">
      <parent link="base_link"/>
      <child link="hip_motorL"/>
        <origin rpy="0.0 0.0 0.0" xyz="-0.03 0.06 0.0"/>
        <axis xyz="0.0 1.0 0.0"/>
    </joint>

    <joint name="hip_motorL_to_knee_motorL" type="fixed">
      <parent link="hip_motorL"/>
      <child link="knee_motorL"/>
      <origin rpy="0.0 0.0 0.0" xyz="0.0 0.05 0.0"/>
      <axis xyz="0.0 1.0 0.0"/>
    </joint>

    <joint name="hip_motorL_to_hip_linkL" type="fixed">
      <parent link="knee_motorL"/>
      <child link="hip_linkL"/>
      <origin rpy="0.0 0.0 0.0" xyz="0.0 0.035 0.0"/>
      <axis xyz="0.0 1.0 0.0"/>
    </joint>

    <joint name="hip_motorL_to_knee_linkL" type="continuous">
      <parent link="knee_motorL"/>
      <child link="knee_linkL"/>
      <origin rpy="0.0 0.0 0.0" xyz="0.0 0.055 0.0"/>
      <axis xyz="0.0 1.0 0.0"/>
    </joint>

    <joint name="knee_linkL_to_leg_linkL" type="continuous">
      <parent link="knee_linkL"/>
      <child link="leg_linkL"/>
      <origin rpy="0.0 0.0 0.0" xyz="-0.1414 -0.05 -0.1414"/>
      <axis xyz="0.0 1.0 0.0"/>
    </joint>

    <joint name="leg_linkL_wheel_linkL" type="continuous">
      <parent link="leg_linkL"/>
      <child link="wheel_linkL"/>
      <origin rpy="0.0 0.0 0.0" xyz="0.1414 0.02 -0.1414"/>
      <axis xyz="0.0 1.0 0.0"/>
    </joint>

    <!-- Right Side -->

    <!-- Hip Motor Right -->
    <link name="hip_motorR">
        <visual>
            <origin rpy="${PI} 0.0 0.0" xyz="0.0 0.0 0.0"/> 
            <geometry>
              <mesh filename='package://rbt_simulation/meshes/CyberGearmotor.STL' scale="0.001 0.001 0.001"/>
            </geometry>
        </visual>
    </link>

    <!-- Knee Motor Right -->
    <link name="knee_motorR">
      <visual>
          <origin rpy="${PI} 0.0 0.0" xyz="0.0 0.0 0.0"/> 
          <geometry>
            <mesh filename='package://rbt_simulation/meshes/CyberGearmotor.STL' scale="0.001 0.001 0.001"/>
          </geometry>
      </visual>
    </link>

    <!-- Hip link Right -->
    <link name="hip_linkR">
      <visual>
          <origin rpy="0.0 0.0 0.0" xyz="0.0 0.0 0.0"/> 
          <geometry>
            <mesh filename='package://rbt_simulation/meshes/link1R.STL' scale="0.001 0.001 0.001"/>
          </geometry>
      </visual>
    </link> 

    <!-- Knee link Right -->
    <link name="knee_linkR">
      <visual>
          <origin rpy="0.0 0.0 0.0" xyz="0.0 0.0 0.0"/> 
          <geometry>
            <mesh filename='package://rbt_simulation/meshes/link2R.STL' scale="0.001 0.001 0.001"/>
          </geometry>
      </visual>
    </link> 

    <!-- Leg link Right -->
    <link name="leg_linkR">
      <visual>
          <origin rpy="0.0 0.0 0.0" xyz="0.0 0.0 0.0"/> 
          <geometry>
            <mesh filename='package://rbt_simulation/meshes/link4R.STL' scale="0.001 0.001 0.001"/>
          </geometry>
      </visual>
    </link> 

    <!-- wheel link Right -->
    <link name="wheel_linkR">
      <visual>
          <origin rpy="0.0 0.0 0.0" xyz="0.0 0.0 0.0"/> 
          <geometry>
              <cylinder radius="0.1" length="0.025"/>
          </geometry>
      </visual>
    </link> 

    <joint name="base_to_hip_motorR" type="continuous">
      <parent link="base_link"/>
      <child link="hip_motorR"/>
        <origin rpy="0.0 0.0 0.0" xyz="-0.03 -0.06 0.0"/>
        <axis xyz="0.0 1.0 0.0"/>
    </joint>


    <joint name="hip_motorR_to_knee_motorR" type="fixed">
      <parent link="hip_motorR"/>
      <child link="knee_motorR"/>
        <origin rpy="0.0 0.0 0.0" xyz="0.0 -0.05 0.0"/>
        <axis xyz="0.0 1.0 0.0"/>
    </joint>

    <joint name="hip_motorR_to_hip_linkR" type="fixed">
      <parent link="knee_motorR"/>
      <child link="hip_linkR"/>
      <origin rpy="0.0 0.0 0.0" xyz="0.0 -0.035 0.0"/>
      <axis xyz="0.0 1.0 0.0"/>
    </joint>

    <joint name="hip_motorR_to_knee_linkR" type="continuous">
      <parent link="knee_motorR"/>
      <child link="knee_linkR"/>
      <origin rpy="0.0 0.0 0.0" xyz="0.0 -0.05 0.0"/>
      <axis xyz="0.0 1.0 0.0"/>
    </joint>

    <joint name="knee_linkR_to_leg_linkR" type="continuous">
      <parent link="knee_linkR"/>
      <child link="leg_linkR"/>
      <origin rpy="0.0 0.0 0.0" xyz="0.0 0.0 0.0"/>
      <axis xyz="0.0 1.0 0.0"/>
    </joint>

    <joint name="leg_linkR_wheel_linkR" type="continuous">
      <parent link="leg_linkR"/>
      <child link="wheel_linkR"/>
      <origin rpy="${-PI/2} 0.0 0.0" xyz="0.0 0.0 0.2"/>
      <axis xyz="0.0 0.0 1.0"/>
    </joint>

</robot>
